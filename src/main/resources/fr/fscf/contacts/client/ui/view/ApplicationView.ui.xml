<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="res" type="fr.fscf.contacts.client.res.AppResources"></ui:with>

    <ui:style>
        @def navbarHeight 50px;
        @def footerHeight 60px;
        body {
            height: 100%;
        }
        .container {
            min-height: 100%;
            position: absolute;
            padding-top: navbarHeight;
            padding-bottom: footerHeight;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
        }
        .logo {
            height: 50px;
            width: auto;
            padding: 5px 0px 5px 15px;
            float: left;
        }
        .menu-item i {
            margin-right: 5px;
        }
        .body {
            min-height: 100%;
        }
        .content {
            padding: 35px 12% 35px;
        }
        .footer {
            height: footerHeight;
            background: #484e5c;
            text-align: center;
            color: #8f96a5;
            font-size: 80%;
        }
        .footer .copyright {
            padding-top: 20px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.container}">
        <b:Navbar addStyleNames="{style.navbar}">
            <b:NavbarHeader>
                <g:Image resource="{res.appLogo}" styleName="{style.logo}" />
                <b:NavbarBrand ui:field="brand">FSCF</b:NavbarBrand>
                <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
            </b:NavbarHeader>

            <b:NavbarCollapse b:id="navbar-collapse">
                <b:NavbarNav>
                    <b:ListDropDown>
                        <b:AnchorButton dataToggle="DROPDOWN" icon="BARS">Menu</b:AnchorButton>
                        <b:DropDownMenu>
                            <b:AnchorListItem ui:field="contactsLink" addStyleNames="{style.menu-item}" icon="SEARCH">
                                Rechercher des contacts
                            </b:AnchorListItem>
                            <b:AnchorListItem ui:field="contactLink" addStyleNames="{style.menu-item}" icon="PLUS">
                                Ajouter un contact
                            </b:AnchorListItem>
                            <b:AnchorListItem ui:field="associationLink" addStyleNames="{style.menu-item}" icon="PLUS">
                                Ajouter une association
                            </b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ListDropDown>
                </b:NavbarNav>
            </b:NavbarCollapse>
        </b:Navbar>

        <b:Container fluid="true" styleName="{style.body}">
            <g:HTML ui:field="message"/>

            <g:SimplePanel ui:field="container" styleName="{style.content}">
                <!-- Dynamic content. -->
            </g:SimplePanel>
        </b:Container>

        <g:FlowPanel styleName="{style.footer}">
            <g:HTML styleName="{style.copyright}" text="Â© 2015 FSCF" />
        </g:FlowPanel>
    </g:HTMLPanel>

</ui:UiBinder>