<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        li.email-menu > a {
            font-style: italic;
            font-size: 90%;
            color: #ccc;
            cursor: default;
        }
        li.email-menu:hover, li.email-menu > a:hover {
            background: inherit;
            color: #ccc;
        }
    </ui:style>

    <b:NavbarNav pull="RIGHT">

        <!-- Either anonymous menu is displayed... -->
        <b:AnchorListItem ui:field="loginLink" icon="POWER_OFF">Se connecter</b:AnchorListItem>

        <!-- ...or authenticated menu is displayed -->
        <b:ListDropDown ui:field="authenticatedMenu">
            <b:AnchorButton ui:field="usernameLabel" dataToggle="DROPDOWN" icon="USER" />
            <b:DropDownMenu>
                <b:AnchorListItem ui:field="email" addStyleNames="{style.email-menu}" />
                <b:AnchorListItem ui:field="logoutLink" icon="POWER_OFF">Se d√©connecter</b:AnchorListItem>
            </b:DropDownMenu>
        </b:ListDropDown>

    </b:NavbarNav>

</ui:UiBinder>